<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Aldrich&display=swap" rel="stylesheet">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/path/to/your/css">
</head>
<style>
    body {
        font-family: "Aldrich", sans-serif;
        font-weight: 400;
        padding-top: 70px;
        background-color: #f8f9fa;
    }

    .navbar {
        background-color: #000;
    }

    .navbar-brand {
        font-size: 1.5rem;
        color: #fff !important;
    }

    .nav-link {
        color: #fff !important;
    }

    .nav-link:hover {
        color: #4CAF50 !important;
    }

    h1, h2 {
        margin-top: 20px;
        text-align: center;
    }

    table {
        margin: 20px auto;
        width: 90%;
    }
</style>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TerraNexus</a>
            <ul class="nav justify-content-end">
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contactform">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/listings">Listings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">FAQ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/signUp">Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item"></li>
                <a class="nav-link" aria-current="page" href="/admin">Admin</a>
            </li>
            <li class="nav-item"></li>
            <a class="nav-link" aria-current="page" href="/admin">Admin</a>
        </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1>Admin Dashboard</h1>

        <!-- Farmers Section -->
        <h2>Farmers</h2>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Location</th>
                    <th>Farm Size</th>
                    <th>Farming Type</th>
                </tr>
            </thead>
            <tbody>
                <% farmers.forEach(farmer => { %>
                    <tr>
                        <td><%= farmer.id %></td>
                        <td><%= farmer.name %></td>
                        <td><%= farmer.email %></td>
                        <td><%= farmer.phone_number %></td>
                        <td><%= farmer.location %></td>
                        <td><%= farmer.farm_size %></td>
                        <td><%= farmer.farming_type %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Vendors Section -->
        <h2>Vendors</h2>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Contact Person</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Location</th>
                    <th>Business Type</th>
                </tr>
            </thead>
            <tbody>
                <% vendors.forEach(vendor => { %>
                    <tr>
                        <td><%= vendor.id %></td>
                        <td><%= vendor.company_name %></td>
                        <td><%= vendor.contact_person %></td>
                        <td><%= vendor.email %></td>
                        <td><%= vendor.phone_number %></td>
                        <td><%= vendor.location %></td>
                        <td><%= vendor.business_type %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Vendor Demands Section -->
        <h2>Vendor Demands</h2>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Vendor ID</th>
                    <th>Crop Name</th>
                    <th>Crop Type</th>
                    <th>Required Quantity</th>
                    <th>Price Range Min</th>
                    <th>Price Range Max</th>
                    <th>Quality Required</th>
                    <th>Location Preference</th>
                    <th>Deadline</th>
                    <th>Image URL</th>
                </tr>
            </thead>
            <tbody>
                <% vendorDemands.forEach(demand => { %>
                    <tr>
                        <td><%= demand.vendor_id %></td>
                        <td><%= demand.crop_name %></td>
                        <td><%= demand.crop_type %></td>
                        <td><%= demand.required_quantity %></td>
                        <td><%= demand.price_range_min %></td>
                        <td><%= demand.price_range_max %></td>
                        <td><%= demand.quality_required %></td>
                        <td><%= demand.location_preference %></td>
                        <td><%= demand.deadline %></td>
                        <td><%= demand.image_url %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
