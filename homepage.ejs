<%- layout("/layouts/boilerplate") %>

<style>
    body {
        background-image: url('https://img.freepik.com/free-photo/agriculture-iot-with-rice-field-background_53876-124635.jpg?w=2000&t=st=1725593547~exp=1725594147~hmac=1b88c195f018e72a32eae27aed3078c1abe8ea7f618adf9a80d94d5452a277f1');
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Carousel Container */
    .carousel-container {
        max-width: 100%;
        height: auto;
        margin: 0 auto;
        overflow: hidden;
        position: relative;
    }

    /* Carousel Items */
    .carousel-item img {
        width: 100%;
        height: 70vh;
        object-fit: cover;
        transition: opacity 2s ease-in-out;
    }

    .carousel-item-next,
    .carousel-item-prev,
    .carousel-item.active {
        transition: opacity 2s ease-in-out;
    }

    .carousel-margin {
        margin-bottom: 50px;
    }

    /* Cards */
    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: .375rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-top-left-radius: .375rem;
        border-top-right-radius: .375rem;
    }

    .card-body {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .card-body h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .card-body p {
        margin-bottom: 1rem;
    }

    /* Container for Cards */
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Media Queries for responsiveness */
    @media (max-width: 1024px) {
        .carousel-item img {
            height: 50vh;
        }
    }

    @media (max-width: 768px) {
        .carousel-item img {
            height: 40vh;
        }
    }
</style>

<title>Heartland Farms</title>

<body>
    <!-- Carousel -->
