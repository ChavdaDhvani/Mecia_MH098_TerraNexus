<%- layout("/layouts/boilerplate") %>
<style>
   body {
       background-color: rgb(205, 237, 205);
   }
   .card-img-top {
       height: 200px; /* Set a fixed height for images */
       object-fit: cover; /* Cover the card area while preserving aspect ratio */
   }
</style>

<body>
    <div class="container">
        <h1 class="my-4">Listings</h1>
        <div class="mb-3">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/listings/new" class="btn btn-success me-md-2 btn-lg" style="color: black;">Create New Listings</a>
            </div>  	
        </div>
        <div>
            <div class="row">
                <% allListings.forEach(listing => { %>    
                    <div class="col-md-4 mb-4 d-flex align-items-stretch">
                        <div class="card w-100 h-100">
                            <% if (listing.image_url) { %>
                                <img src="<%= listing.image_url %>" class="card-img-top" alt="Crop Image">
                            <% } else { %>
                                <img src="https://via.placeholder.com/500x200?text=No+Image+Available" class="card-img-top" alt="Placeholder Image">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= listing.crop_name %></h5>
                                <p class="card-text"><strong>Crop Type:</strong> <%= listing.crop_type %></p>
                                <p class="card-text"><strong>Required Quantity:</strong> <%= listing.required_quantity %> kg</p>
                                <p class="card-text"><strong>Price Range:</strong> ₹<%= listing.price_range_min %> - ₹<%= listing.price_range_max %></p>
                                <p class="card-text"><strong>Quality Required:</strong> <%= listing.quality_required %></p>
                                <p class="card-text"><strong>Location Preference:</strong> <%= listing.location_preference %></p>
                                <p class="card-text"><strong>Deadline:</strong> <%= listing.deadline %></p>
                                <div class="d-grid gap-2 col-6 mx-auto">
                                    <a href="/listings/<%= listing.vendor_id %>" class="btn btn-success">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <script src="/scripts.js"></script> 
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

